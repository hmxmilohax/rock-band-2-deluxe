{new
   UIPanel
   friend_options_panel
   (file
      "friend_options_wii.milo")
   (focus opt1.btn)
   (helpbar
      ((cancel helpbar_back)
         (confirm helpbar_select)))
   (friend_name
      "")
   (friendlist_pos 0)
   (enter
      {print
         "friend_options_panel nickname value: "
         [friend_name]
         "\n"}
      {friendname.lbl
         set_localized
         [friend_name]})
   (update)
   (SELECT_MSG
      {switch
         $component
         (opt1.btn
            {print
               "button 1 select\n"}
            {friends_provider
               invite_friend
               [friendlist_pos]}
            {ui goto_screen invited_to_game_dialog})
         (opt2.btn
            {print
               "button 2 select\n"}
            {add_nickname_panel set for_edit_only TRUE}
            {ui goto_screen add_nickname_screen})
         (opt3.btn
            {print
               "button 3 select\n"}
            {ui goto_screen remove_friend_dialog})})}
