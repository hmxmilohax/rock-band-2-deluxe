{new
   BandScreen
   remove_friend_dialog
   (panels dialog_panel)
   (focus dialog_panel)
   (friend_id 0)
   (enter
      {dialog_panel
         set_yesno
         {sprintf
            {localize remove_friend_dialog_local}
            [friend_id]}
         yes.btn})
   (SELECT_MSG
      {switch
         $component
         (yes.btn
            {if_else
               {platform_mgr
                  remove_friend
                  [friend_id]}
               {ui pop_screen}
               {ui
                  goto_screen
                  {ui friend_error_screen}}})
         (no.btn
            {ui pop_screen})})}
